{
    "manifest_version": 2,
    "name": "Webcam Spoofer",
    "version": "1.0",
    "description": "Spoof webcam",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
        "default_popup": "popup/verify.html"
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background/auth.js"],
        "persistent": true
    },
    "web_accessible_resources": [ "injected/*" ]
}
